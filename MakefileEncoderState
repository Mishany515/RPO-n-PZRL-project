SOURCES = mainEncoder.c
FORLIBRARY = Coder.o ToLine.o
LIBRARY = libString.a
TARGET = encoder

all: $(TARGET)

$(TARGET): mainEncoder.o libString.a
	gcc mainEncoder.o -o $(TARGET) -std=c99 -L. -lString

mainEncoder.o: mainEncoder.c
	gcc $< -c -o $@ -std=c99

$(LIBRARY): $(FORLIBRARY)
	ar cr $(LIBRARY) Coder.o ToLine.o

Coder.o: Coder.c
	gcc $< -c -o $@ -std=c99

ToLine.o: ToLine.c
	gcc $< -c -o $@ -std=c99

clean:
	rm -f *.o *.a $(TARGET)
