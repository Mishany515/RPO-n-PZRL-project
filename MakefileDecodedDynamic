SOURCES = mainDecoded.c
FORLIBRARY = Coder.o ToLine.o
LIBRARY = libCod.so
TARGET = decoded

all: $(TARGET)

$(TARGET): mainDecoded.o libCod.so
	gcc mainDecoded.o -o $(TARGET) -std=c99 -L. -lCod -Wl,-rpath,.

mainDecoded.o: $(SOURCES)
	gcc $< -c -o $@ -std=c99

$(LIBRARY): $(FORLIBRARY)
	gcc Coder.o ToLine.o  -shared -o $(LIBRARY)

Coder.o: Coder.c
	gcc -c -fPIC $< -std=c99

ToLine.o: ToLine.c
	gcc $< -c -o $@ -std=c99

clean:
	rm -f *.o *.so $(TARGET)
